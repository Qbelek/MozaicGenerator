<Application x:Class="GUIv2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUIv2"
             xmlns:views="clr-namespace:GUIv2.Views"
             xmlns:viewmodels="clr-namespace:GUIv2.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:WelcomeViewModel}">
            <views:WelcomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PrepareImagesViewModel}">
            <views:PrepareImagesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CreateMozaicViewModel}">
            <views:CreateMozaicView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:DisplayScreenViewModel}">
            <views:DisplayView />
        </DataTemplate>
    </Application.Resources>
</Application>
